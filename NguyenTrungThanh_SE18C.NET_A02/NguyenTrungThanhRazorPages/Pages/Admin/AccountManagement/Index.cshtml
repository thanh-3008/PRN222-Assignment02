@page
@model NguyenTrungThanhRazorPages.Pages.Admin.AccountManagement.IndexModel
@{
    ViewData["Title"] = "Account Management";
}

<div class="content-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title mb-0">@ViewData["Title"]</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAccountModal">
            <i class="fa-solid fa-plus me-2"></i>Create New Account
        </button>
    </div>

    <div class="mb-4">
        <form method="get" class="d-flex">
            <input type="text" asp-for="SearchTerm" class="form-control me-2" placeholder="Enter name or email to search..." />
            <button type="submit" class="btn btn-info text-nowrap"><i class="fa-solid fa-search me-2"></i>Search</button>
        </form>
    </div>

    <table class="table table-custom">
        <thead>
            <tr>
                <th>ID</th>
                <th>Account Name</th>
                <th>Email</th>
                <th class="text-center">Role</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Accounts)
            {
                <tr>
                    <td>@item.AccountId</td>
                    <td>@item.AccountName</td>
                    <td>@item.AccountEmail</td>
                    <td class="text-center">
                        @if (item.AccountRole == 1)
                        {
                            <span class="badge-role badge-role-staff">Staff</span>
                        }
                        else if (item.AccountRole == 2)
                        {
                            <span class="badge-role badge-role-lecturer">Lecturer</span>
                        }
                        else
                        {
                            @item.AccountRole
                        }
                    </td>
                    <td class="text-center action-buttons">
                        <button type="button" class="btn btn-action-edit edit-button" data-id="@item.AccountId" title="Edit">
                            <i class="fa-solid fa-pencil"></i>
                        </button>
                        <a asp-page="./Details" asp-route-id="@item.AccountId" class="btn btn-action-details" title="Details">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.AccountId" class="btn btn-action-delete" title="Delete" onclick="return confirm('Are you sure you want to delete this account?');">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="createAccountModal" tabindex="-1" aria-labelledby="createAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header">
                    <h5 class="modal-title" id="createAccountModalLabel">Create New Account</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Account.AccountName" class="form-label"></label>
                        <input asp-for="Account.AccountName" class="form-control" />
                        <span asp-validation-for="Account.AccountName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Account.AccountEmail" class="form-label"></label>
                        <input asp-for="Account.AccountEmail" class="form-control" />
                        <span asp-validation-for="Account.AccountEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Account.AccountPassword" class="form-label"></label>
                        <input asp-for="Account.AccountPassword" type="password" class="form-control" />
                        <span asp-validation-for="Account.AccountPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Account.AccountRole" class="form-label"></label>
                        <input asp-for="Account.AccountRole" class="form-control" placeholder="1 for Staff, 2 for Lecturer" />
                        <span asp-validation-for="Account.AccountRole" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editAccountModal" tabindex="-1" aria-labelledby="editAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Edit">
                <div class="modal-header">
                    <h5 class="modal-title" id="editAccountModalLabel">Edit Account</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="Account.AccountId" id="edit-account-id" />
                    <div class="form-group mb-3">
                        <label asp-for="Account.AccountName" class="form-label"></label>
                        <input asp-for="Account.AccountName" class="form-control" id="edit-account-name" />
                        <span asp-validation-for="Account.AccountName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Account.AccountEmail" class="form-label"></label>
                        <input asp-for="Account.AccountEmail" class="form-control" id="edit-account-email" />
                        <span asp-validation-for="Account.AccountEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Account.AccountPassword" class="form-label"></label>
                        <input asp-for="Account.AccountPassword" type="password" class="form-control" placeholder="Leave blank to keep current password" />
                        <span asp-validation-for="Account.AccountPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Account.AccountRole" class="form-label"></label>
                        <input asp-for="Account.AccountRole" class="form-control" id="edit-account-role" />
                        <span asp-validation-for="Account.AccountRole" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('.edit-button').on('click', function () {
                var accountId = $(this).data('id');
                $.ajax({
                    url: `/Admin/AccountManagement?handler=Account&id=${accountId}`,
                    type: 'GET',
                    success: function (response) {
                        $('#edit-account-id').val(response.accountId);
                        $('#edit-account-name').val(response.accountName);
                        $('#edit-account-email').val(response.accountEmail);
                        $('#edit-account-role').val(String(response.accountRole));

                        var editModal = new bootstrap.Modal(document.getElementById('editAccountModal'));
                        editModal.show();
                    },
                    error: function () {
                        alert('Could not retrieve account details.');
                    }
                });
            });

            $('#createAccountModal').on('hidden.bs.modal', function () {
                $(this).find('form')[0].reset();
                $(this).find('.text-danger').text('');
            });
        });
    </script>
}