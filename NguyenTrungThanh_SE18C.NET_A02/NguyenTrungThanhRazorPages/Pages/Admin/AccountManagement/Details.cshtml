@page "{id:int}"
@model NguyenTrungThanhRazorPages.Pages.Admin.AccountManagement.DetailsModel
@{
    ViewData["Title"] = "Account Details";
}

<h1>Account Details</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Account.AccountId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Account.AccountName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Account.AccountEmail</dd>

        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.Account.AccountRole</dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.Account.AccountId" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>