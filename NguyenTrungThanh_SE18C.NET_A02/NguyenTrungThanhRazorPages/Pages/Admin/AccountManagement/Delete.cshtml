@page "{id:int}"
@model NguyenTrungThanhRazorPages.Pages.Admin.AccountManagement.DeleteModel
@{
    ViewData["Title"] = "Delete Account";
}

<h1>Delete Account</h1>
<h3>Are you sure you want to delete this?</h3>
<hr />

<div>
    <h4>Account Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.AccountName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.AccountName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.AccountEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.AccountEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.AccountRole)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.AccountRole)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Account.AccountId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>