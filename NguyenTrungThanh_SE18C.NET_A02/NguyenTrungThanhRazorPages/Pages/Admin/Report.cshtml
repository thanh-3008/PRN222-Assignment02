@page
@model NguyenTrungThanhRazorPages.Pages.Admin.ReportModel
@{
    ViewData["Title"] = "News Report";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-header">
        Generate Report by Date Range
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <div class="form-group">
                        <input type="submit" value="Generate Report" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.ReportData != null)
{
    <h3 class="mt-4">Report Results (@Model.ReportData.Count articles)</h3>
    <table class="table table-bordered mt-2">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Created Date</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ReportData)
            {
                <tr>
                    <td>@item.NewsTitle</td>
                    <td>@item.CreatedBy?.AccountName</td>
                    <td>@item.CreatedDate?.ToString("yyyy-MM-dd")</td>
                    <td>@item.Category?.CategoryName</td>
                </tr>
            }
        </tbody>
    </table>
}