@page
@model NguyenTrungThanhRazorPages.Pages.Staff.NewsHistoryModel
@{
    ViewData["Title"] = "My News History";
}

<div class="content-card">
    <h1 class="page-title">@ViewData["Title"]</h1>

    <table class="table table-custom">
        <thead>
            <tr>
                <th>Title</th>
                <th>Created Date</th>
                <th class="text-center">Status</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.NewsArticles.Any())
            {
                @foreach (var item in Model.NewsArticles)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NewsTitle)
                        </td>
                        <td>
                            @item.CreatedDate?.ToString("dd/MM/yyyy HH:mm")
                        </td>
                        <td class="text-center">
                            @if (item.NewsStatus == true)
                            {
                                <span class="badge-status badge-status-active">Active</span>
                            }
                            else
                            {
                                <span class="badge-status badge-status-inactive">Inactive</span>
                            }
                        </td>
                        <td class="text-center action-buttons">
                            <a asp-page="./NewsManagement/Edit" asp-route-id="@item.NewsArticleId" class="btn btn-action-edit" title="Edit">
                                <i class="fa-solid fa-pencil"></i>
                            </a>
                            <a asp-page="./NewsManagement/Details" asp-route-id="@item.NewsArticleId" class="btn btn-action-details" title="Details">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                            <a asp-page="./NewsManagement/Delete" asp-route-id="@item.NewsArticleId" class="btn btn-action-delete" title="Delete" onclick="return confirm('Are you sure you want to delete this article?');">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center py-5">You have not created any news articles yet.</td>
                </tr>
            }
        </tbody>
    </table>
</div>