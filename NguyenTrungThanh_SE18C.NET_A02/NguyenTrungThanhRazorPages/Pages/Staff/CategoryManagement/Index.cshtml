@page
@model NguyenTrungThanhRazorPages.Pages.Staff.CategoryManagement.IndexModel
@{
    ViewData["Title"] = "Category Management";
}

<div class="content-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title mb-0">@ViewData["Title"]</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCategoryModal">
            <i class="fa-solid fa-plus me-2"></i>Create New Category
        </button>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <div class="mb-4">
        <form method="get" class="d-flex">
            <input type="text" asp-for="SearchTerm" class="form-control me-2" placeholder="Enter category name to search..." />
            <button type="submit" class="btn btn-info text-nowrap"><i class="fa-solid fa-search me-2"></i>Search</button>
        </form>
    </div>

    <table class="table table-custom">
        <thead>
            <tr>
                <th>ID</th>
                <th>Category Name</th>
                <th>Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryDesciption</td>
                    <td class="text-center action-buttons">
                        <button type="button" class="btn btn-action-edit edit-button"
                                data-bs-toggle="modal"
                                data-bs-target="#editCategoryModal"
                                data-id="@item.CategoryId" title="Edit">
                            <i class="fa-solid fa-pencil"></i>
                        </button>
                        <a asp-page="./Details" asp-route-id="@item.CategoryId" class="btn btn-action-details" title="Details">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.CategoryId" class="btn btn-action-delete" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="createCategoryModal" tabindex="-1" aria-labelledby="createCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page="Create">
                <div class="modal-header">
                    <h5 class="modal-title" id="createCategoryModalLabel">Create New Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="create-category-name" class="form-label">Category Name</label>
                        <input name="Category.CategoryName" id="create-category-name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="create-category-description" class="form-label">Category Description</label>
                        <textarea name="Category.CategoryDesciption" id="create-category-description" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editCategoryModal" tabindex="-1" aria-labelledby="editCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page="Edit">
                <div class="modal-header">
                    <h5 class="modal-title" id="editCategoryModalLabel">Edit Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Category.CategoryId" id="edit-category-id" />

                    <div class="mb-3">
                        <label for="edit-category-name" class="form-label">Category Name</label>
                        <input name="Category.CategoryName" id="edit-category-name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="edit-category-description" class="form-label">Category Description</label>
                        <textarea name="Category.CategoryDesciption" id="edit-category-description" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.edit-button').on('click', function () {
                var categoryId = $(this).data('id');
                $.ajax({
                    url: `/Staff/CategoryManagement?handler=Category&id=${categoryId}`,
                    type: 'GET',
                    success: function (response) {
                        $('#edit-category-id').val(response.categoryId);
                        $('#edit-category-name').val(response.categoryName);
                        $('#edit-category-description').val(response.categoryDesciption);
                    },
                    error: function (xhr, status, error) {
                        console.error("Could not get category data: ", error);
                    }
                });
            });

            $('#createCategoryModal').on('hidden.bs.modal', function () {
                $(this).find('form')[0].reset();
            });
        });
    </script>
}