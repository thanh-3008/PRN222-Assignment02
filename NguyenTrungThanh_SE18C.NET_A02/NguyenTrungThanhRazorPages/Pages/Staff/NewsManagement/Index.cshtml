@page
@model NguyenTrungThanhRazorPages.Pages.Staff.NewsManagement.IndexModel
@{
    ViewData["Title"] = "News Article Management";
}

<div class="content-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title mb-0">@ViewData["Title"]</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createArticleModal">
            <i class="fa-solid fa-plus me-2"></i>Create New Article
        </button>
    </div>

    <table class="table table-custom">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Created Date</th>
                <th class="text-center">Status</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.NewsArticles)
            {
                <tr>
                    <td>@item.NewsTitle</td>
                    <td>@item.Category?.CategoryName</td>
                    <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        @if (item.NewsStatus == true)
                        {
                            <span class="badge-status badge-status-active">Active</span>
                        }
                        else
                        {
                            <span class="badge-status badge-status-inactive">Inactive</span>
                        }
                    </td>
                    <td class="text-center action-buttons">
                        <button type="button" class="btn btn-action-edit" data-id="@item.NewsArticleId" title="Edit">
                            <i class="fa-solid fa-pencil"></i>
                        </button>
                        <a asp-page="./Details" asp-route-id="@item.NewsArticleId" class="btn btn-action-details" title="Details">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.NewsArticleId" class="btn btn-action-delete" title="Delete" onclick="return confirm('Are you sure you want to delete this article?');">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="createArticleModal" tabindex="-1" aria-labelledby="createArticleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page="Create">
                <div class="modal-header">
                    <h5 class="modal-title" id="createArticleModalLabel">Create New Article</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label class="control-label">Title</label>
                        <input name="NewsArticle.NewsTitle" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Content</label>
                        <textarea name="NewsArticle.NewsContent" class="form-control" rows="8"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Category</label>
                        <select name="NewsArticle.CategoryId" class="form-control" asp-items="@Model.CategoryList" required>
                            <option value="">-- Select Category --</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Tags (comma-separated)</label>
                        <input name="TagsString" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editArticleModal" tabindex="-1" aria-labelledby="editArticleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="Edit">
                <div class="modal-header">
                    <h5 class="modal-title" id="editArticleModalLabel">Edit Article</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="NewsArticle.NewsArticleId" id="edit-article-id" />
                    <input type="hidden" name="NewsArticle.CreatedDate" id="edit-created-date" />
                    <input type="hidden" name="NewsArticle.CreatedById" id="edit-created-by-id" />

                    <div class="form-group mb-3">
                        <label class="control-label">Title</label>
                        <input name="NewsArticle.NewsTitle" id="edit-title" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Headline</label>
                        <input name="NewsArticle.Headline" id="edit-headline" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Content</label>
                        <textarea name="NewsArticle.NewsContent" id="edit-content" class="form-control" rows="8"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Category</label>
                        <select name="NewsArticle.CategoryId" id="edit-category-id" class="form-control" asp-items="@Model.CategoryList" required></select>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Tags (comma-separated)</label>
                        <input name="TagsString" id="edit-tags" class="form-control" />
                    </div>
                    <div class="form-group mb-3 form-check">
                        <input class="form-check-input" name="NewsArticle.NewsStatus" id="edit-status" type="checkbox" value="true" />
                        <label class="form-check-label" for="edit-status">
                            Status (Active)
                        </label>
                        <input type="hidden" name="NewsArticle.NewsStatus" value="false" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).on('click', '.btn-action-edit', function () {
            var articleId = $(this).data('id');
            $.ajax({
                url: `/Staff/NewsManagement?handler=Article&id=${articleId}`,
                type: 'GET',
                success: function (response) {
                    $('#edit-article-id').val(response.newsArticleId);
                    $('#edit-created-date').val(response.createdDate);
                    $('#edit-created-by-id').val(response.createdById);
                    $('#edit-title').val(response.newsTitle);
                    $('#edit-headline').val(response.headline);
                    $('#edit-content').val(response.newsContent);
                    $('#edit-category-id').val(response.categoryId);
                    $('#edit-tags').val(response.tagsString);
                    $('#edit-status').prop('checked', response.newsStatus);

                    var editModal = new bootstrap.Modal(document.getElementById('editArticleModal'));
                    editModal.show();
                },
                error: function () {
                    alert('Error loading article data.');
                }
            });
        });

        $('#createArticleModal').on('hidden.bs.modal', function () {
            $(this).find('form')[0].reset();
        });
    </script>
}