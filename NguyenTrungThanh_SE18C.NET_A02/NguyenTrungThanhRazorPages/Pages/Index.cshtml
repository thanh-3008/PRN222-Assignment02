@page "/News"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <h1 class="display-4 text-center my-4">FUNews</h1>

    <div class="row">
        @if (Model.NewsArticleList != null && Model.NewsArticleList.Count > 0)
        {
            foreach (var article in Model.NewsArticleList)
            {
                <div class="col-md-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@article.NewsTitle</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@article.Category.CategoryName</h6>
                            <p class="card-text">@article.Headline</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Nguồn: @article.NewsSource</small>
                                <small class="text-muted">Ngày đăng: @article.CreatedDate?.ToString("dd/MM/yyyy")</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-center text-muted">Không có tin tức nào để hiển thị.</p>
            </div>
        }
    </div>
</div>